<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <Preference
        android:layout="@layout/superior_header"
        android:title="@string/lockscreen_title"
        android:selectable="false"/>

    <Preference
        android:key="always_on_display_schedule"
        settings:iconSpaceReserved="false"
        android:title="@string/always_on_display_schedule_title"
        android:fragment="com.superior.settings.fragments.AODSchedule" />

    <com.superior.settings.preferences.SystemSettingSwitchPreference
        android:key="lockscreen_battery_info"
        settings:iconSpaceReserved="false"
        android:title="@string/lockscreen_battery_info_title"
        android:summary="@string/lockscreen_battery_info_summary"
        android:defaultValue="true" />

    <com.superior.settings.preferences.SystemSettingListPreference
        android:key="lockscreen_charging_animation_style"
        settings:iconSpaceReserved="false"
        android:title="@string/lockscreen_charging_animation_title"
        android:entries="@array/lockscreen_charging_animation_entries"
        android:entryValues="@array/lockscreen_charging_animation_values"
        android:defaultValue="1" />

    <com.superior.settings.preferences.SystemSettingSwitchPreference
        android:key="fingerprint_success_vib"
        settings:iconSpaceReserved="false"
        android:title="@string/fprint_sucess_vib_title"
        android:summary="@string/fprint_sucess_vib_summary"
        android:defaultValue="true" />

    <com.superior.settings.preferences.SystemSettingSwitchPreference
        android:key="fingerprint_error_vib"
        settings:iconSpaceReserved="false"
        android:title="@string/fprint_error_vib_title"
        android:summary="@string/fprint_error_vib_summary"
        android:defaultValue="true" />

    <com.superior.settings.preferences.SecureSettingSwitchPreference
        android:key="lockscreen_media_metadata"
        settings:iconSpaceReserved="false"
        android:title="@string/lockscreen_media_art_title"
        android:summary="@string/lockscreen_media_art_summary"
        android:defaultValue="false" />

    <com.superior.settings.preferences.SecureSettingSwitchPreference
        android:key="hide_lockicon"
        settings:iconSpaceReserved="false"
        android:title="@string/hide_lockicon_title"
        android:summary="@string/hide_lockicon_summary"
        android:defaultValue="true" />

    <!-- FOD icon picker -->
    <Preference
        android:key="fod_icon_picker_category"
        settings:iconSpaceReserved="false"
        android:title="@string/fod_icon_picker_title"
        android:summary="@string/fod_icon_picker_summary"
        android:fragment="com.superior.settings.fragments.FODIconPickerFragment" />

</PreferenceScreen>
